{% extends "layout.html.twig" %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/homepage.css') }}" />
{% endblock stylesheets %}
{% block body %}
	<div style="margin-top:75px">
		<div class="row" >
			<div class="col-md-1"></div>
	        <div class="col-md-10">
	          	<div class="row panelHome weeklyProjectPicture panelHome-default">
	            	<div class="jumbotronHome col-md-4" >
	            		<h2> {{ starProject.projectName }} </h2>
	  					<p> {{ starProject.content }} </p>
	  					<p><a  class="btn btn-primary btn-lg"href="{{ path("project_page_homepage", { 'projectId':	starProject.projectId }) }}">En Savoir Plus</a></p>
	            	</div>
	            </div>
	        </div>
	    	<div class="col-md-1"></div>
	    </div>
    

	<div class="row">
		<div class="col-md-1 "></div>
		<ul class="list-group col-md-4" >
			<div class="list-group-item active">
	    		<h4>Dernières Actualités</h4>
	  		</div>
	  		<div class="recent-news">
		  		{% for recentActivity in recentActivities %}
		  			<a href="{{ path("project_page_homepage", { 'projectId': "5" }) }}">
		  				<li class="list-group-items">
			  				<div class="row">
				  				<div class="news col-md-3"></div>
				  				<div class="col-md-9">
				  					{% for project in recentActivity %}
				  						<strong>{{ project.name }}:</strong></br>
				  					{% endfor %}
				  					{% for user in recentActivity %}
				  						<strong>{{ user.firstname }}:</strong></br>
				  					{% endfor %}
				  					{{ recentActivity.content }}
				  				</div>
				  			</div>
			  			</li>
			  		</a>
		  		{% endfor %}
		  	</div>
		</ul>
		<div class="col-md-6">
			<div class="row panelThematics panel-primary">
				<div class="panel-heading">
	    			<h4>Thématiques</h4>
	    		</div>
	    		<div class="panel-body">
				    {% for thematic in thematics %}
					    <div id="thematic-column" class="col-md-3">
					    	<a href="{{ path("centrale_lille_homepage_category", { 'category': thematic }) }}">
					    		<h4 class="thematicTitle"> {{ thematic }} </h4>
					    	</a>
					    	<a href="{{ path("centrale_lille_homepage_category", { 'category': thematic }) }}">
					    		<div class="thematics"></div>
					    	</a>
					    </div>
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>

	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<div class="row panel panel-primary ">
				<div class="panel-heading">
					<h4>Projets Récemment créés</h4>
				</div>
				<div class="panel-body">
					{% for recentProject in recentProjects %}
						<div class="col-md-4">
							<div class="panel panel-default">
							  	<div class="panel-heading">{{ recentProject.projectName }}</div>
							  	<div class="recentProjectPicture"></div>
							  	<div class="panel-footer">
							  		<div class="row">
								  		<div class="col-md-4 recentProjectSide">
								  			<object data="{{ asset('icons/like.svg') }}" type="image/svg+xml"></object>
								  			</br>{{ recentProject.likes }}
								  		</div>
								  		<div class="col-md-4 recentProjectCenter">
								  			<object data="{{ asset('icons/message.svg') }}" type="image/svg+xml"></object>
								  		</br>{{ recentProject.messages }}
								  		</div>
								  		<div class="col-md-4 recentProjectSide">
								  			<object data="{{ asset('icons/file.svg') }}" type="image/svg+xml"></object>
								  		</br>{{ recentProject.files}}
								  		</div>
								  	</div>
							  	</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
	</div>
{% endblock body %}
