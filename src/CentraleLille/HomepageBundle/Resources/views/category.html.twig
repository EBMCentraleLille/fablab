{% extends "layout.html.twig" %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/homepage.css') }}" />
{% endblock stylesheets %}
{% block body %}
	
		<br><br><br><br><br><br>


		<div class="row">
			<div class="col-md-1"></div>
			<div class="col-md-10">
				<div class="row panel panel-primary ">
					<div class="panel-heading">
					<h4>{{ category }}</h4>
					</div>
					<div class="panel-body">
					{% for project in projects %}
					<div class="col-md-4">
					
							<div class="panel panel-default">
							  	<div class="panel-heading">
							  		<a href="{{ path("project_page_homepage", { 'projectId': project.id }) }}">
							  			{{ project.name }}
									</a>
							  	</div>
							  	<a href="{{ path("project_page_homepage", { 'projectId': project.id }) }}">
							  		<div class="RecentProjectPicture" style="background-image:url('{{ project.picture }}');"></div>
							  	</a>
							  	<div class="panel-footer">
							  		<div class="row">
								  		<div class="col-md-6 recentProjectSide">
								  			<object data="{{ asset('icons/like.svg') }}" type="image/svg+xml"></object>
								  		</div>
								  		<div class="col-md-4 recentProjectSide">
								  			<object data="{{ asset('icons/message.svg') }}" type="image/svg+xml"></object>
								  		</div>
								  	</div>
							  	</div>
							</div>
					
			</div>
			{% endfor %}
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
	</div>


	<div class="row">
			<div class="col-md-1"></div>
			<div class="col-md-10">
				<div class="row panel panel-primary ">
					<div class="panel-heading">
					<h4> Utilisateurs abonn√©s </h4>
					</div>
					<div class="panel-body">
					{% for user in users %}
					<div class="col-md-4">
					
							<div class="panel panel-default">
							  	<div class="panel-heading">{{ user }}</div>
							  	<div class="RecentProjectPicture"></div>
							  	
							</div>
					
			</div>
			{% endfor %}
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
	</div>


	
{% endblock body %}