{% extends 'layout.html.twig' %}

{% block body %}
<br><br><br>
		<div class="row">
			<div class="col-md-4 col-md-offset-1">
				<div class="row">
					<h1 class="text-primary text-center">Mon compte</h1></br></br>
				</div>
				<div class="right-menu">
		            <div class="panel panel-primary ">
		                <div class="panel-heading">
		                    <h3 class="panel-title">Mon compte</h3>
		                </div>
		                <div class="panel-body">
		                    <ul class="list-group">
	                            <li class="list-group-item">
	                            	Prénom : {{ user.firstname }}
	                            </li>
	                            <li class="list-group-item">
	                            	Nom : {{ user.lastname }}
	                            </li>
	                            <li class="list-group-item">
	                            	Email : {{ user.email }}
	                            </li>
	                            <li class="list-group-item">
	                            	Promotion : {{ user.promo }}
	                            </li>
	                            <li class="list-group-item">
	                            	Tél. : {{ user.phone }}
	                            </li>
	                            </br>
	                            <a href={{path('fos_user_profile_edit')}} class="btn btn-primary btn-block">Modifier</a>
		                    </ul>
		                </div>
		            </div>
				</div>
			</div>
			<div class="col-md-5 col-md-offset-1">
				<h1 class="text-primary text-center">Mes projets</h1>
				</br></br>
				<div class="right-menu">
		            <div class="panel panel-primary ">
		                <div class="panel-heading">
		                    <h3 class="panel-title">Mes projets</h3>
		                </div>
		                <div class="panel-body">
		                    <ul class="list-group">
		                        {% for project in projects %}
		                            <li class="list-group-item">
		                               {{ project.project.name }}
		                            </li>
		                        {% endfor %}
		                    </ul>
		                </div>
		            </div>
				</div>
			</div>
		</div>

</div>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<a href={{path('fos_user_profile_edit')}} class="btn btn-primary">Modifier</a>
	</div>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1 class="text-primary text-center">Mes compétences</h1>
		</br>
		<div class="fos_user_user_show">
			{% for competence in competencesUser %}
			<p> {{ competence.name }}</p>
			{% endfor %}
		</div>
		</br>
	</div>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<a href={{path('fos_user_profile_edit_competences')}} class="btn btn-primary">Modifier Mes compétences</a>
	</div>
</div>
{% endblock body %}
