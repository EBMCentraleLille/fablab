{% extends 'layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <br><br><br>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-primary" style="margin-top:50px;">
                <div class="panel-heading text-center">
                    <h1>Connexion</h1>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                        <div class="form-group">
                            <label class="control-label col-sm-offset-2 col-sm-3" for="username">Nom d'utilisateur</label>
                            <div class="col-sm-3">
                                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-offset-2 col-sm-3" for="password">Mot de passe</label>
                            <div class="col-sm-3">
                                <input class="form-control" type="password" id="password" name="_password" required="required" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 col-sm-offset-5">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                <label for="remember_me">Se souvenir de moi</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 col-sm-offset-5">
                                <input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="Connexion" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 col-sm-offset-5">
                                <a class="btn btn-default btn-block" href=" {{ path('fos_user_registration_register') }}">Inscription</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock body %}
