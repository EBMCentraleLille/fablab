{% extends 'layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <br><br><br>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="text-primary text-center">Veuillez vous connecter</h1>
    <br><br>
    <div class="container-fluid">
        <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                    <label class="control-label col-sm-offset-2 col-sm-2" for="username">Nom d'utilisateur</label>
                    <div class="col-sm-3">
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-offset-2 col-sm-2" for="password">Mot de passe</label>
                    <div class="col-sm-3">
                    </br>
                        <input class="form-control" type="password" id="password" name="_password" required="required" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12 col-sm-offset-4">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">Se souvenir de moi</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-3 col-sm-offset-4">
                        <input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="Connexion" />
                    </div>
                </div>


        </form>
    </div>
{% endblock body %}
