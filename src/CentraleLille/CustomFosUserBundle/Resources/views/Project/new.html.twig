{% extends 'layout.html.twig' %}

{% block body %}
    <br><br><br>
    <h1 class="text-primary text-center">Nouveau projet</h1>
    {{ form_start(form, { 'action': path('project_new')}) }}
    <div class="row">
        <div class="col-md-3 col-md-offset-4">
            <div class="form-group">
            </br>
                {{ form_errors(form.name) }}
                {{ form_label(form.name, 'Intitué du projet', {'label_attr':{'class': 'control-label'}}) }}
                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.dateBegin) }}
                {{ form_label(form.dateBegin, 'Date de début', {'label_attr':{'class': 'control-label'}}) }}
                {{ form_widget(form.dateBegin, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.dateEnd) }}
                {{ form_label(form.dateEnd, 'Date de fin', {'label_attr':{'class': 'control-label'}}) }}
                {{ form_widget(form.dateEnd, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.picture) }}
                {{ form_label(form.picture, 'Image', {'label_attr':{'class': 'control-label'}}) }}
                {{ form_widget(form.picture, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.summary) }}
                {{ form_label(form.summary, 'Résumé', {'label_attr':{'class': 'control-label'}}) }}
                {{ form_widget(form.summary, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.description) }}
                {{ form_label(form.description, 'Descriptif', {'label_attr':{'class': 'control-label'}}) }}
                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
            </br>
                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary btn-block'} }) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock body %}
