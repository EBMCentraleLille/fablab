{% extends 'layout.html.twig' %}

{% block title %} Forum {% endblock %}

{% block body %}
    <div style="margin-top:75px">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <h2>{{thread.title}} - <em> par {{thread.author.username}}</h2>
                <p> {{ thread.content }}</p>
                <a href="post/add/{{thread.id}}"> Répondre à cette discussion </a>
                <div class="list-group"></div>
                {% for post in posts %}
                <a href="forum/{{ thread.id }}" class="list-group-item">
                    <h4 class="list-group-item-heading">Réponse de <em>{{post.author.username}}</em></h4>
                    <p class="list-group-item-text">{{post.content}}</p></a>
                    <a href="../delete_post/{{ post.id }}"> Supprimer </a>
                </li>
                {% endfor %}
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
{% endblock %}
