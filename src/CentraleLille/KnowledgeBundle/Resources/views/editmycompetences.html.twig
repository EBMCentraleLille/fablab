{% extends 'layout.html.twig' %}
{% block body %}
<br><br><br>
<h1 class="text-primary text-center">Ajouter une compétence </h1>
{{ form_start(form, { 'action': path('fos_user_profile_edit_competences')}) }}
<div class="row">
    <div class="col-md-3 col-md-offset-4">
        {% for flash_message in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flash_message }}
            </div>
        {% endfor %}
        <div class="form-group">
            </br>
            {{ form_errors(form.name) }}
            {{ form_label(form.name, 'Nom de la compètence', {'label_attr':{'class': 'control-label'}}) }}
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            </br>
            {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary btn-block'} }) }}
        </div>
        {{ form_end(form) }}
        <h1 class="text-primary text-center">Mes compétences</h1>
        </br>
        <div class="fos_user_user_show">
            {% for userCompetence in userCompetences %}
                <p> {{ userCompetence.competence.name }}
                <a href="delUserComp/{{ userCompetence.id }}"> Supprimer </a>
                </p>
            {% endfor %}
        </div>
        </br>
        <h1 class="text-primary text-center">Compétences Suggérées</h1>
        </br>
        <div class="fos_user_user_show">
            {% for notUserCompetence in notUserCompetences %}
                <p> {{ notUserCompetence.name }}
                    <a href="addUserComp/{{ notUserCompetence.id }}"> Ajouter </a>
                </p>
            {% endfor %}
        </div>
        </br>
    </div>
</div>
{% endblock body %}