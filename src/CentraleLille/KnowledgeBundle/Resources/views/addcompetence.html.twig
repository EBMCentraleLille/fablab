{% extends 'layout.html.twig' %}
{% block body %}
    <br><br><br>
    <h1 class="text-primary text-center">Nouvelle compétence</h1>
    {{ form_start(form, { 'action': path('centrale_lille_knowledge_add_competence')}) }}
    <div class="row">
        <div class="col-md-3 col-md-offset-4">
            <div class="form-group">
                </br>
                {{ form_errors(form.name) }}
                {{ form_label(form.name, 'Nom de la compètence', {'label_attr':{'class': 'control-label'}}) }}
                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                </br>
                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary btn-block'} }) }}
            </div>
        </div>
        {# On affiche tous les messages flash dont le nom est « info » #}
        {% for message in app.session.flashbag.get('info') %}
            <p>Message flash : {{ message }}</p>
        {% endfor %}
    </div>
    {{ form_end(form) }}
{% endblock body %}