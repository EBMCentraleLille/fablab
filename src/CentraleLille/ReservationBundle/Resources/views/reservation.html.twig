{% extends "ReservationBundle:Default:index.html.twig" %}

{% block title %} Reservation - Index {% endblock %}

{% block body %}
    <div class="container-fluid">
    <div class="col-md-5 col-lg-5">
    <h3>  Réserver une machine </h3>
    </div>
    </div>

<div class="well">
   {{ form_start(form, {'attr':{'class':'form-horizontal'}},{'method':'post'}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.startDateTime,"Date de début :",{'label_attr':{'class':'col-sm-3 control-label'}}) }}
        {{ form_errors(form.startDateTime) }}
        <div class="col-sm-4">
            {{ form_widget(form.startDateTime) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.endDateTime,"Date de fin :", {'label_attr':{'class':'col-sm-3 control-label'}}) }}
        {{ form_errors(form.endDateTime) }}
        <div class="col-sm-4">
            {{ form_widget(form.endDateTime) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.bookable,'Machine :',{'label_attr':{'class':'col-sm-3 control-label'}}) }}
        {{ form_errors(form.bookable) }}
        <div class="col-sm-6">
            {{ form_widget(form.bookable) }}
        </div>
    </div>



   {{ form_end(form) }}

</div>

{% endblock body %}