<script>
    function likefunction(projectLike, projectLikeName, route) {
        var xhr = getXMLHttpRequest();
        if (projectLike.eq(0).text() == "Suivre") { 
            projectLike.text("Ne Plus Suivre");
            projectLike.prev().attr('data',"{{ asset('icons/likeOn.svg') }}");
        } else {
            projectLike.text("Suivre");
            projectLike.prev().attr('data',"{{ asset('icons/like.svg') }}");
        }
        xhr.open("POST", route, true);
        xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
        xhr.send("projet=" + projectLikeName);
        xhr.send(null);
    };

